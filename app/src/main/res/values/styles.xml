<resources>

    <style name="PopupAnimationTop" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/popup_in_top</item>
        <item name="android:windowExitAnimation">@anim/popup_out</item>
    </style>

    <style name="PopupAnimationBottom" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/popup_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/popup_out</item>
    </style>

    <style name="SeparatorHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/separator_thickness</item>
        <item name="android:minHeight">1dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="palette_cell">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="ItemGrid">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:drawSelectorOnTop">false</item>
        <item name="android:columnWidth">@dimen/custom_icon_column_width</item>
        <item name="android:gravity">center</item>
        <item name="android:horizontalSpacing">1dp</item>
        <item name="android:verticalSpacing">@dimen/app_grid_vertical_spacing</item>
        <item name="android:numColumns">auto_fit</item>
        <item name="android:paddingTop">@dimen/app_grid_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/app_grid_vertical_padding</item>
        <item name="android:paddingLeft">@dimen/app_grid_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/app_grid_horizontal_padding</item>
        <item name="android:stretchMode">spacingWidth</item>
    </style>

    <style name="DialogPreferenceStyle" parent="Preference.DialogPreference.Material">
        <item name="iconSpaceReserved">false</item>
    </style>

    <style name="SwitchPreferenceStyle" parent="Preference.SwitchPreference.Material">
        <item name="iconSpaceReserved">false</item>
    </style>

    <style name="ScreenPreferenceStyle" parent="Preference.PreferenceScreen.Material">
        <item name="iconSpaceReserved">false</item>
    </style>

    <style name="PreferenceStyle" parent="Preference.Material">
        <item name="iconSpaceReserved">false</item>
    </style>

    <style name="CategoryTitleTextAppearance" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textSize">@dimen/abc_text_size_title_material</item>
    </style>

    <style name="CategoryPreferenceStyle" parent="Preference.Category.Material">
        <item name="iconSpaceReserved">true</item>
    </style>

    <style name="FragmentPreferenceStyle" parent="PreferenceFragment.Material">
        <item name="android:divider">@drawable/list_separator_dark</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="materialThemeOverlay">@style/TextInputLayoutOverlay</item>
    </style>

    <style name="TextInputLayoutOverlay" parent="">
        <item name="colorPrimary">?android:attr/textColorPrimary</item>      <!-- Activated color-->
        <item name="colorOnSurface">?android:attr/textColorSecondary</item>  <!-- Normal color-->
        <item name="colorError">?android:attr/textColorTertiary</item>       <!-- Error color-->

        <item name="editTextStyle">@style/Widget.MaterialComponents.TextInputEditText.OutlinedBox
        </item>
    </style>

    <style name="EditTextViewStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textSelectHandle">@drawable/abc_text_select_handle_middle_mtrl_dark
        </item>
        <item name="android:textSelectHandleLeft">@drawable/abc_text_select_handle_left_mtrl_dark
        </item>
        <item name="android:textSelectHandleRight">
            @drawable/abc_text_select_handle_right_mtrl_dark
        </item>
    </style>

    <style name="EditTextViewStyle.White">
        <item name="android:textSelectHandle">@drawable/abc_text_select_handle_middle_mtrl_light
        </item>
        <item name="android:textSelectHandleLeft">@drawable/abc_text_select_handle_left_mtrl_light
        </item>
        <item name="android:textSelectHandleRight">
            @drawable/abc_text_select_handle_right_mtrl_light
        </item>
    </style>

</resources>
