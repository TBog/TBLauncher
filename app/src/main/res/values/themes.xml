<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="BaseThemeLight" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="alertDialogTheme">@style/NoTitleDialogTheme</item>
        <item name="appSelectableItemBackground">?android:attr/selectableItemBackground</item>
        <item name="android:actionMenuTextColor">@color/undefined</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="AppThemeTransparent" parent="BaseThemeLight">
        <item name="resultColor">@android:color/white</item>
        <item name="searchColor">@android:color/white</item>
        <item name="resultShadowColor">@android:color/black</item>
        <item name="searchShadowColor">@android:color/black</item>
        <item name="searchBackgroundColor">@null</item>
        <item name="listBackgroundColor">@color/black_overlay</item>
        <item name="dividerDrawable">@null</item>
        <item name="textShadowRadius">3</item>

        <item name="colorControlHighlight">@color/colorAccent</item>

        <item name="android:listPreferredItemHeight">40sp</item> <!-- 64dp -->
        <item name="android:listPreferredItemHeightSmall">20sp</item> <!-- 48dp -->
        <item name="android:listPreferredItemHeightLarge">64sp</item> <!-- 80dp -->

        <item name="android:windowShowWallpaper">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:textColor">@color/primary_text_selector_darkbg</item>
        <item name="android:textColorPrimary">@color/primary_text_selector_darkbg</item>
        <item name="android:textColorSecondary">@color/secondary_text_selector_darkbg</item>
        <item name="android:textColorTertiary">@color/tertiary_text_color_selector</item>

        <item name="searchBackgroundOutline">@android:color/transparent</item>
    </style>

    <style name="GradientWindowTitle">
        <item name="android:scrollHorizontally">true</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginEnd">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:paddingStart">?attr/dialogPreferredPadding</item>
        <item name="android:paddingEnd">?attr/dialogPreferredPadding</item>
        <item name="android:paddingTop">@dimen/abc_dialog_padding_top_material</item>
        <item name="android:background">@drawable/window_title_background</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="GradientButtonBar" parent="@android:style/ButtonBar">
        <item name="android:background">@drawable/button_bar_background</item>
    </style>

    <style name="GradientButtonBar.White">
        <item name="android:background">@drawable/button_bar_background_light</item>
    </style>

    <style name="GradientButtonBar.DeepBlues">
        <item name="android:background">@drawable/button_bar_background_deep_blues</item>
    </style>

    <style name="GradientBorderlessButton">
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="GradientBorderlessButton.White">
        <item name="colorControlHighlight">@android:color/black</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="GradientBorderlessButton.DeepBlues">
        <item name="colorControlHighlight">@color/DeepBlues_4</item>
        <item name="android:textColor">@color/DeepBlues_4</item>
    </style>

    <style name="TitleDialogTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowNoTitle">false</item>
        <item name="android:colorBackground">#000</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowTitleStyle">@style/GradientWindowTitle</item>
        <item name="android:windowBackground">@drawable/dialog_background_dark</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="windowActionBar">false</item>
        <item name="windowActionModeOverlay">true</item>

        <item name="android:textColor">@color/primary_text_selector_darkbg</item>
        <item name="android:textColorPrimary">@color/primary_text_selector_darkbg</item>
        <item name="android:textColorSecondary">@color/secondary_text_selector_darkbg</item>
        <item name="android:textColorTertiary">@color/tertiary_text_color_selector</item>
        <item name="android:listDivider">@drawable/list_separator_light</item>

        <item name="resultColor">@android:color/white</item>
        <item name="searchColor">@android:color/white</item>
        <item name="resultShadowColor">@android:color/black</item>
        <item name="searchShadowColor">@android:color/black</item>
        <item name="searchBackgroundColor">@null</item>
        <item name="listBackgroundColor">@color/black_overlay</item>
        <item name="dividerDrawable">@null</item>
        <item name="textShadowRadius">3</item>

        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="colorControlActivated">?android:attr/textColor</item>
        <item name="colorControlNormal">?android:attr/textColorSecondary</item>
        <item name="android:textColorPrimaryDisableOnly">#f00</item>

        <item name="android:buttonBarStyle">@style/GradientButtonBar</item>
        <item name="android:buttonBarButtonStyle">@style/GradientBorderlessButton</item>
        <item name="android:borderlessButtonStyle">@style/GradientBorderlessButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/GradientBorderlessButton</item>
        <item name="buttonBarPositiveButtonStyle">@style/GradientBorderlessButton</item>
    </style>

    <style name="NoTitleDialogTheme" parent="TitleDialogTheme">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="ListPopupTitle">
        <item name="android:textSize">@dimen/popup_title</item>
        <item name="android:textColor">@color/primary_text_selector_darkbg</item>
    </style>

    <style name="ListPopupItem">
        <!--        <item name="android:background">?android:attr/listChoiceBackgroundIndicator</item>-->
        <item name="android:textSize">@dimen/result_small_size</item>
        <item name="android:textColor">@color/secondary_text_selector_darkbg</item>
        <item name="android:paddingStart">?android:attr/listPreferredItemPaddingStart</item>
        <item name="android:paddingEnd">?android:attr/listPreferredItemPaddingEnd</item>
        <item name="android:paddingLeft">?android:attr/listPreferredItemPaddingLeft</item>
        <item name="android:paddingRight">?android:attr/listPreferredItemPaddingRight</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?android:attr/listPreferredItemHeight</item>
    </style>

    <style name="ListPopupTheme" parent="Widget.AppCompat.ListPopupWindow">
        <item name="alertDialogTheme">?attr/alertDialogTheme</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:listDivider">@drawable/list_separator_light</item>
        <item name="android:listPreferredItemPaddingLeft">@dimen/popup_padding_horizontal</item>
        <item name="android:listPreferredItemPaddingRight">@dimen/popup_padding_horizontal</item>
    </style>

    <style name="SettingsDialogTitle" parent="GradientWindowTitle">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="SettingsDialogTitle.White">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@drawable/window_title_background_light</item>
    </style>

    <style name="SettingsDialogTitle.DeepBlues">
        <item name="android:textColor">@color/DeepBlues_4</item>
        <item name="android:background">@drawable/window_title_background_deep_blues</item>
    </style>

    <style name="SettingsDialogTheme" parent="NoTitleDialogTheme">
        <item name="android:textColor">@color/primary_text_selector_darkbg</item>
        <item name="android:textColorPrimary">@color/primary_text_selector_darkbg</item>
        <item name="android:textColorSecondary">@color/secondary_text_selector_darkbg</item>
        <item name="android:textColorTertiary">@color/tertiary_text_color_selector</item>
        <item name="android:listDivider">@drawable/list_separator_light</item>
        <item name="android:windowTitleStyle">@style/SettingsDialogTitle</item>
    </style>

    <style name="SettingsDialogTheme.White">
        <item name="android:windowBackground">@drawable/dialog_background_light</item>
        <item name="android:textColor">@color/settings_primary_selector_lightbg</item>
        <item name="android:textColorHint">@color/settings_primary_selector_lightbg</item>
        <item name="android:textColorPrimary">@color/settings_primary_selector_lightbg</item>
        <item name="android:textColorSecondary">@color/settings_secondary_selector_lightbg</item>
        <item name="android:textColorTertiary">@color/settings_tertiary_selector_lightbg</item>
        <item name="android:listDivider">@drawable/list_separator_dark</item>
        <item name="android:windowTitleStyle">@style/SettingsDialogTitle.White</item>

        <item name="textColorAlertDialogListItem">@color/primary_text_selector_lightbg</item>

        <item name="colorPrimary">@color/primary_text_selector_lightbg</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorControlHighlight">@android:color/black</item>
        <item name="colorControlNormal">@android:color/black</item>

        <item name="android:buttonBarStyle">@style/GradientButtonBar.White</item>
        <item name="android:buttonBarButtonStyle">@style/GradientBorderlessButton.White</item>
        <item name="android:borderlessButtonStyle">@style/GradientBorderlessButton.White</item>
        <item name="buttonBarNegativeButtonStyle">@style/GradientBorderlessButton.White</item>
        <item name="buttonBarPositiveButtonStyle">@style/GradientBorderlessButton.White</item>
    </style>

    <style name="SettingsDialogTheme.DeepBlues">
        <item name="android:windowBackground">@drawable/dialog_background_deep_blues</item>
        <item name="android:textColor">@color/settings_primary_selector_deep_blues</item>
        <item name="android:textColorHint">@color/settings_primary_selector_deep_blues</item>
        <item name="android:textColorPrimary">@color/settings_primary_selector_deep_blues</item>
        <item name="android:textColorSecondary">@color/settings_secondary_selector_deep_blues</item>
        <item name="android:listDivider">@drawable/list_separator_deep_blues</item>
        <item name="android:windowTitleStyle">@style/SettingsDialogTitle.DeepBlues</item>

        <item name="textColorAlertDialogListItem">@color/settings_primary_selector_deep_blues</item>

        <item name="colorPrimary">@color/DeepBlues_selector_primary</item>
        <item name="colorPrimaryDark">@color/DeepBlues_2</item>
        <item name="colorControlHighlight">@color/DeepBlues_selector_primary</item>
        <item name="colorControlNormal">@color/DeepBlues_3</item>

        <item name="android:buttonBarStyle">@style/GradientButtonBar.DeepBlues</item>
        <item name="android:buttonBarButtonStyle">@style/GradientBorderlessButton.DeepBlues</item>
        <item name="android:borderlessButtonStyle">@style/GradientBorderlessButton.DeepBlues</item>
        <item name="buttonBarNegativeButtonStyle">@style/GradientBorderlessButton.DeepBlues</item>
        <item name="buttonBarPositiveButtonStyle">@style/GradientBorderlessButton.DeepBlues</item>
    </style>

    <style name="PreferenceTheme" parent="PreferenceThemeOverlay">
        <item name="dialogPreferenceStyle">@style/DialogPreferenceStyle</item>
        <item name="preferenceCategoryStyle">@style/CategoryPreferenceStyle</item>
        <item name="preferenceScreenStyle">@style/ScreenPreferenceStyle</item>
        <item name="switchPreferenceStyle">@style/SwitchPreferenceStyle</item>
        <item name="preferenceStyle">@style/PreferenceStyle</item>
        <item name="preferenceFragmentCompatStyle">@style/FragmentPreferenceStyle</item>
        <item name="preferenceCategoryTitleTextAppearance">@style/CategoryTitleTextAppearance</item>
    </style>

    <style name="OptionsTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/settings_primary_selector_darkbg</item>
    </style>

    <style name="OptionsTextAppearance.White">
        <item name="android:textColor">@color/settings_primary_selector_lightbg</item>
    </style>

    <style name="OptionsTextAppearance.DeepBlues">
        <item name="android:textColor">@color/settings_primary_selector_deep_blues</item>
    </style>

    <style name="SettingsTheme" parent="AppThemeTransparent">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="alertDialogTheme">@style/SettingsDialogTheme</item>
        <item name="preferenceTheme">@style/PreferenceTheme</item>
        <item name="android:textColor">@color/settings_primary_selector_darkbg</item>
        <item name="android:itemBackground">@android:color/black</item>
        <item name="android:itemTextAppearance">@style/OptionsTextAppearance</item>
    </style>

    <!--
        White monochrome
    -->
    <style name="SettingsTheme.White">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="alertDialogTheme">@style/SettingsDialogTheme.White</item>
        <item name="android:textColor">@color/settings_primary_selector_lightbg</item>
        <item name="android:textColorPrimary">@color/settings_primary_selector_lightbg</item>
        <item name="android:textColorSecondary">@color/settings_secondary_selector_lightbg</item>
        <item name="android:textColorTertiary">@color/settings_tertiary_selector_lightbg</item>

        <item name="tabIndicatorColor">@android:color/black</item>
        <item name="tabBackground">@drawable/tab_background_light</item>
        <item name="tabGravity">center</item>
        <item name="tabSelectedTextColor">@color/settings_primary_selector_lightbg</item>

        <item name="colorPrimary">@android:color/black</item>
        <item name="colorControlHighlight">@android:color/black</item>
        <item name="colorControlNormal">@android:color/black</item>
        <item name="colorAccent">@android:color/black</item>
        <item name="android:itemBackground">@android:color/white</item>
        <item name="android:itemTextAppearance">@style/OptionsTextAppearance.White</item>
    </style>

    <!--
        DeepBlues
    -->
    <style name="SettingsTheme.DeepBlues">
        <item name="android:windowBackground">@color/DeepBlues_1</item>
        <item name="alertDialogTheme">@style/SettingsDialogTheme.DeepBlues</item>
        <item name="android:textColor">@color/settings_primary_selector_deep_blues</item>
        <item name="android:textColorPrimary">@color/settings_primary_selector_deep_blues</item>
        <item name="android:textColorSecondary">@color/settings_secondary_selector_deep_blues</item>

        <item name="tabIndicatorColor">@color/DeepBlues_4</item>
        <item name="tabBackground">@drawable/tab_background_deep_blues</item>
        <item name="tabGravity">center</item>
        <item name="tabSelectedTextColor">@color/settings_primary_selector_deep_blues</item>

        <item name="colorPrimary">@color/DeepBlues_selector_primary</item>
        <item name="colorControlHighlight">@color/DeepBlues_3</item>
        <item name="colorControlNormal">@color/DeepBlues_selector_primary</item>
        <item name="colorAccent">@color/DeepBlues_4</item>
        <item name="android:itemBackground">@color/DeepBlues_1</item>
        <item name="android:itemTextAppearance">@style/OptionsTextAppearance.DeepBlues</item>
    </style>

    <!--
        Dark
    -->
    <style name="SettingsTheme.DarkBg">
        <item name="android:windowBackground">@color/darkBackground</item>
        <item name="android:itemBackground">@color/darkBackground</item>
    </style>
</resources>
